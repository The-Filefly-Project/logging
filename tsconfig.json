{
    "include": [
        "./src"
    ],
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./build/",
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
    }
}